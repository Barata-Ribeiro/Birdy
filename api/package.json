{
	"name": "birdy-api",
	"version": "1.0.0",
	"private": "true",
	"type": "commonjs",
	"description": "The main Restful API for Birdy, a Instagram-like social media for bird enthusiasts.",
	"author": {
		"name": "Barata Ribeiro",
		"email": "j.mendes1920@gmail.com",
		"url": "https://barataribeiro.com/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Barata-Ribeiro/Birdy.git"
	},
	"main": "dist/src/index.js",
	"scripts": {
		"start": "node dist/src/index.js",
		"dev": "nodemon ./src/index.ts",
		"build": "rm -rf dist && tsc --build",
		"lint": "eslint './src/**/*.{ts,tsx}'",
		"migration:create": "typeorm-ts-node-commonjs -d ./src/database/ormconfig.ts migration:generate ./src/database/migrations/default",
		"migration:up": "typeorm-ts-node-commonjs -d ./src/database/ormconfig.ts migration:run",
		"migration:down": "typeorm-ts-node-commonjs -d ./src/database/ormconfig.ts migration:revert",
		"seed:run": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d ./src/database/ormconfig.ts",
		"seed:create": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:create -d ./src/database/ormconfig.ts"
	},
	"keywords": [
		"nodejs",
		"node",
		"restapi",
		"rest",
		"api",
		"typeorm",
		"instagram-like",
		"birdy",
		"birds",
		"social-media",
		"social-network",
		"bird-enthusiasts",
		"bird-enthusiast"
	],
	"license": "MIT",
	"dependencies": {
		"bcrypt": "^5.1.1",
		"cloudinary": "^2.0.0",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.4.1",
		"express": "^4.18.2",
		"express-async-errors": "^3.1.1",
		"express-rate-limit": "^7.1.5",
		"helmet": "^7.1.0",
		"ioredis": "^5.3.2",
		"jsonwebtoken": "^9.0.2",
		"multer": "^1.4.5-lts.1",
		"nodemailer": "^6.9.9",
		"pg": "^8.11.3",
		"reflect-metadata": "^0.2.1",
		"streamifier": "^0.1.1",
		"ts-node": "^10.9.2",
		"typeorm": "^0.3.20",
		"typeorm-extension": "^3.4.0",
		"typescript": "^5.3.3"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/compression": "^1.7.5",
		"@types/cookie-parser": "^1.4.6",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/multer": "^1.4.11",
		"@types/node": "^20.11.16",
		"@types/nodemailer": "^6.4.14",
		"@types/streamifier": "^0.1.2",
		"@types/uuid": "^9.0.8",
		"@types/yargs": "^17.0.32",
		"@typescript-eslint/eslint-plugin": "^6.20.0",
		"@typescript-eslint/parser": "^6.20.0",
		"eslint": "^8.56.0",
		"nodemon": "^3.0.3"
	}
}
